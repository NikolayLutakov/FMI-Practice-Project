<h1>Create Answer</h1>

<form method="post">
    <input type="hidden" id="questionId" name="questionId" value="1">
    <div class="form-group">
        <label for="Content">Content</label>
        <input type="text" class="form-control" id="content" name="content" placeholder="Enter content">
    </div>
    <div class="form-group">
        <label for="IsCorrect">Is Correct</label>
        <select class="form-control" id="IsCorrect" name="IsCorrect">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
