@model QuestionDetailsServiceModel

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Content</th>
            <th scope="col">Points</th>
            <th scope="col">Type</th>
             <th scope="col"></th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td scope="col">@Model.Content</td>
            <td scope="col">@Model.Points</td>
            <td scope="col">@Model.QuestionType.TypeName</td>
            <td scope="col">
               <a asp-controller="Answers" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-primary float-right ml-3">Add Answer</a>
            </td>
        </tr>

    </tbody>
</table>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Content</th>
            <th scope="col">Is Correct</th>
            <th scope="col"></th>        
        </tr>
    </thead>
    <tbody>
        @foreach(var answer in Model.Answers)
        {
            <tr>
            <td scope="col">@answer.Content</td>
            <td scope="col">@answer.IsCorrect</td>
            <td scope="col">
               <a asp-controller="Answers" asp-action="Edit" asp-route-id="@answer.Id" class="btn alert-warning float-right ml-3">Edit Answer</a>
            </td>
        </tr>
        }
    </tbody>
</table>
