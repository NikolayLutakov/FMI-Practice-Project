@{
}
<h1>Create Question</h1>

<form method="post">
    <input type="hidden" id="testId" name="testId" value=@ViewBag.TestId>
    <div class="form-group">
        <label for="title">Content</label>
        <input type="text" class="form-control" id="content" name="content" placeholder="Enter content">
    </div>
    <div class="form-group">
        <label for="points">Points</label>
        <input type="number" class="form-control" id="points" name="points" placeholder="Enter points">
    </div>
    <div class="form-group">
        <label for="questionType">Type select</label>
        <select class="form-control" id="questionType" name="questionType">
            <option value="1">Closed</option>
            <option value="2">Opened</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>